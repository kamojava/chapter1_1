public class Main {

	public static void main(String[] args) {
		System.out.println("メッソドを呼び出します");
		hello("湊");
		hello("朝香");
		hello("菅原");
		System.out.println("メッソドの呼び出しがおわりました");
	}

	public static void hello(String name) {//←メッソドhelloの引数をnameに定義させる。
		System.out.println(name + "さん、こんにちは");
	}

}
